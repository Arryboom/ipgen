# check-output - Shell script to test ipgen output
#
# Author: Roy Hills
# Date: 28 May 2012
#
# This script checks that ipgen producces the correct output.
#

IPGENOUTPUT=/tmp/ipgen-output.$$.tmp
EXAMPLEOUTPUT=/tmp/example-output.$$.tmp

echo "Checking ipgen output ..."
cat >$EXAMPLEOUTPUT <<_EOF_
10.0.0.1
10.0.0.2
10.0.0.3
10.0.0.4
10.0.0.5
10.0.0.6
10.1.0.1
10.1.0.2
10.1.0.3
10.1.0.4
10.1.0.5
10.1.0.6
10.2.0.1
10.2.0.2
10.2.0.3
10.2.0.4
10.2.0.5
10.2.0.6
_EOF_
$srcdir/ipgen 10.0.0.0/29 10.1.0.0:255.255.255.248 10.2.0.1-10.2.0.6 > $IPGENOUTPUT 2>&1
if test $? -ne 0; then
   rm -f $IPGENOUTPUT
   rm -f $EXAMPLEOUTPUT
   echo "FAILED"
   exit 1
fi
cmp -s $IPGENOUTPUT $EXAMPLEOUTPUT
if test $? -ne 0; then
   rm -f $IPGENOUTPUT
   rm -f $EXAMPLEOUTPUT
   echo "FAILED"
   exit 1
fi
echo "ok"
rm -f $IPGENOUTPUT
rm -f $EXAMPLEOUTPUT
